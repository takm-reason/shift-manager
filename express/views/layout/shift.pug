extends ./../layout.pug

block content
  section.card.card-cascade.narrower.mb-5.shadow
    .card-body.card-body-cascade
      h1.h3 シフト
      hr
      #shift
      script(src="./dist/shift.js")
      each date in main.results.users
        script= `store.addUsers('id: ${date.id}, username: ${date.username}')`
      each date in main.results.plans
        script= `store.addSleep('id: ${date.id}, userid: ${date.userid}')`
